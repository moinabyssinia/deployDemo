<% layout('layouts/boilerplate') %> 

<div class="top-element">
    <div class="row">
        <div class = "col-lg-6 col-md-12 col-sm-12">
            <h2> <%= data[0].name %> </h2>
        </div>

        <div class = "col-lg-6 col-md-12 col-sm-12">
            <form action="/search" method="get">
                <label for="name">Tide Gauge</label>
                <input type="text" name="name" id = "name" placeholder="eg. cuxhaven">
                <button type="submit">Search</button>
            </form>
        </div>

    </div>

</div>


<!-- <button><a href="/home" style="text-decoration: none;">Home</a></button> -->

<div class="map-container">
    <div class="container">
        <div class="row">
            <!-- adding the leaflet map -->
            <div id="mapid" class = "col-lg-6 col-sm-12"></div>

            <!-- table -->
            <div class="map-table col-lg-6 col-sm-12">
            
                <table class="tgDetail">
                    <tr>
                        <td class = "label">Name</td>
                        <td><%= data[0].name %></td>
                    </tr>

                    <tr>
                        <td class = "label">Longitude</td>
                        <td class="lon"><%= data[0].lon %></td>
                    </tr>

                    <tr>
                        <td class = "label">Latitude</td>
                        <td class="lat"><%= data[0].lat %></td>
                    </tr>

                    <tr>
                        <td class = "label">Country</td>
                        <td><%= data[0].country %></td>
                    </tr>

                    <tr>
                        <td class = "label">Location</td>
                        <td><a href="http://maps.google.com/maps?z=12&t=k&q=<%= data[0].lat %> ,<%= data[0].lon %>" target="_blank">view map</a></td>
                    </tr>

                    <tr>
                        <td class = "label">Observed Daily Max Surge</td>
                        <td><a href="/tgDetail/obs_surge/<%= data[0].name %>" target="_blank">obs surge</a></td>
                    </tr>

                    <tr>
                        <td>20-CR Surge Reconstruction</td>
                        <td><a 
                            href="https://github.com/moinabyssinia/gssr-webmap/blob/gh-pages/20cr/<%= data[0].name %>.7z?raw=true" target="_blank">download</a></td>
                    </tr>

                    <tr>
                        <td class = "label">ERA 20C Surge Reconstruction</td>
                        <td><a href="https://github.com/moinabyssinia/gssr-webmap/blob/gh-pages/era20c/<%= data[0].name %>.7z?raw=true" target="_blank">download</a></td>
                    </tr>

                    <tr>
                        <td class = "label">ERA-Interim Surge Reconstruction</td>
                        <td><a href="https://github.com/moinabyssinia/gssr-webmap/blob/gh-pages/eraint/<%= data[0].name %>.7z?raw=true" target="_blank">download</a></td>
                    </tr>

                    <tr>
                        <td class = "label">ERA5 Surge Reconstruction</td>
                        <td><a href="https://github.com/moinabyssinia/gssr-webmap/blob/gh-pages/erafive/<%= data[0].name %>.7z?raw=true" target="_blank">download</a></td>
                    </tr>

                    <tr>
                        <td class = "label">MERAA-2 Surge Reconstruction</td>
                        <td><a href="https://github.com/moinabyssinia/gssr-webmap/blob/gh-pages/merra/<%= data[0].name %>.7z?raw=true" target="_blank">download</a></td>
                    </tr>

                    <tr>
                        <td class = "label">Changepoint Analysis</td>
                        <td><a href="" target="_blank" style = "pointer-events: none; color: gray; text-decoration: none;">coming soon </a></td>
                    </tr>

                    <tr>
                        <td class = "label">Trend Analysis</td>
                        <td><a href="" target="_blank" style = "pointer-events: none; color: gray; text-decoration: none;">coming soon </a></td>
                    </tr>
                    <tr>
                        <td class = "label">Extreme Value Analysis</td>
                        <td><a href="" target="_blank" style = "pointer-events: none; color: gray; text-decoration: none;">coming soon </a></td>
                    </tr>

                </table>    
            </div>
        </div>
    </div>  
</div>